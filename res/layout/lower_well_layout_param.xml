<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_lower_well"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/input_lower_well_param"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" >
        
        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="X well pitch(mm)"
            android:textColor="#FF00FF00" />
        
        <EditText
            android:id="@+id/well_pitch_x"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView1"
            android:ems="10"
            android:gravity="center_horizontal"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:singleLine="true"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF0000FF" >

            <requestFocus />
        </EditText>
        
        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/TextView1"
            android:text="Y well pitch(mm)"
            android:textColor="#FF00FF00" />
        
        <EditText
            android:id="@+id/well_pitch_y"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView2"
            android:layout_below="@+id/TextView2"
            android:ems="10"
            android:gravity="center_horizontal"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:singleLine="true"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF0000FF" />
        
        <TextView
            android:id="@+id/TextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/TextView2"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:text="X wells offset"
            android:textColor="#FF00FF00" />
        
        <EditText
            android:id="@+id/wells_offset_x"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView3"
            android:layout_below="@+id/TextView3"
            android:ems="10"
            android:gravity="center_horizontal"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:singleLine="true"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF0000FF" >
            
            <requestFocus />
        </EditText>
        
        
        <TextView
            android:id="@+id/TextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/TextView3"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:text="Y wells offset"
            android:textColor="#FF00FF00" />
        
        <EditText
            android:id="@+id/wells_offset_y"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView5"
            android:layout_below="@+id/TextView5"
            android:ems="10"
            android:gravity="center_horizontal"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:singleLine="true"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF0000FF" >
            
            <requestFocus />
        </EditText>
        <Button
            android:id="@+id/exit_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Back" />
        
         <Button
             android:id="@+id/button1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/exit_setting"
             android:layout_marginTop="27dp"
             android:text="384 well" />

         <Button
             android:id="@+id/button2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/button1"
             android:layout_marginTop="26dp"
             android:text="96 well" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/draw_lower_well_region"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </RelativeLayout>
</LinearLayout>
